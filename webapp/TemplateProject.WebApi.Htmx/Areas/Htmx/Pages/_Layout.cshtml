<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["PageTitle"]</title>
    <link crossorigin="anonymous" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" rel="stylesheet">
    <link rel="stylesheet" href="/_content/TemplateProject.WebApi.Htmx/index.css"/>
    <link rel="stylesheet" href="/_content/TemplateProject.WebApi.Htmx/TemplateProject.WebApi.Htmx.bundle.scp.css"/>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
<div id="root">
    <div>
        <a href="https://vitejs.dev" target="_blank">
            <img src="/_content/TemplateProject.WebApi.Htmx/background.png" class="logo" alt="Vite logo"/>
        </a>
        <a href="https://react.dev" target="_blank">
            <img src="/_content/TemplateProject.WebApi.Htmx/background.png" class="logo react" alt="React logo"/>
        </a>
    </div>
    <h1>Razor + HTMX</h1>
    <div id="error-msg" class="uk-margin-remove">
    </div>
    <div class="card">
        <main id="main-content">
            @RenderBody()
        </main>
    </div>
    <p class="read-the-docs">
        Click on the Vite and React logos to learn more
    </p>
</div>
<script src="https://unpkg.com/htmx.org@1.9.7"></script>
@await RenderSectionAsync("Scripts", required: false)
<script>
    /* Global error handling */
    document.addEventListener("htmx:responseError", (e) => {
        let errorDiv = document.querySelector("#error-msg");
        console.error(e.detail.error);
        errorDiv.insertAdjacentHTML('beforeend', e.detail.xhr.response);
        htmx.process(errorDiv);
        errorDiv.scrollIntoView();
    });
</script>
</body>
</html>