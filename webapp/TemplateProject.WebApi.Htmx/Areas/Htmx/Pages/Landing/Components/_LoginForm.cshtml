<div id="login-container">
    <form hx-post hx-page-handler="LoginForm" hx-on:htmx:after-request="_LoginForm_Clear(event);">
        @Html.AntiForgeryToken()
        <label class="form-label">Username</label>
        <input class="form-control" type="text" name="payload.Email" required/>
        <label class="form-label">Password</label>
        <input class="form-control" type="password" name="payload.Password" required/>
        <button type="submit" class="btn btn-sm btn-primary">Submit</button>
    </form>
    <button class="btn" hx-get hx-page-handler="RegisterForm" hx-target="#login-container" hx-swap="outerHTML">Login/Register</button>
    <script>
        function _LoginForm_Clear(e) {
            e.target.querySelector("[name='paylod.Password']").value = '';
        }
    </script>
</div>